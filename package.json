{
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "install": "yarn --cwd backend && yarn --cwd frontend",
    "clean": "rm -rf node_modules deploy yarn.lock && yarn --cwd backend clean && yarn --cwd frontend clean ",
    "local": "gulp set --env=local",
    "dev": "gulp set --env=dev",
    "build-local": "yarn local && yarn --cwd backend build && yarn --cwd frontend build",
    "deploy-local": "yarn build-local && yarn deploy",
    "deploy": "gulp deploy"
  },
  "devDependencies": {
    "@types/gulp": "^4.0.10",
    "@types/node": "^18.11.12",
    "gulp": "^4.0.2",
    "prettier": "2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
